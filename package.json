{
  "name": "eliabot",
  "version": "1.0.0",
  "description": "Nodejs Whatsapp Bot",
  "main": ".build/src/index.js",
  "repository": "https://github.com/eliabefranca/eliabot",
  "author": "eliabe <eliabe.fc@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "build": "rm -rf .build && tsc && cp src/database/config.json .build/src/database/config.json",
    "start": "NODE_ENV=production NODE_PATH=.build/src node -r tsconfig-paths/register .build/src/index.js",
    "db": "sequelize db:migrate",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "dependencies": {
    "@adiwajshing/baileys": "^4.4.0",
    "@hapi/boom": "^10.0.0",
    "@prisma/client": "4.7.1",
    "@types/qrcode-terminal": "^0.12.0",
    "fast-glob": "^3.2.12",
    "g-i-s": "^2.1.6",
    "google-tts-api": "^2.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "node-fetch": "^3.3.0",
    "qrcode-terminal": "^0.12.0",
    "sequelize": "^6.27.0",
    "sqlite3": "^5.1.4",
    "typescript": "^4.9.4",
    "wa-sticker": "^1.0.14"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.16",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.30.0",
    "git-commit-msg-linter": "^4.4.0",
    "husky": "^8.0.2",
    "nodemon": "^2.0.20",
    "pinst": "^3.0.0",
    "sequelize-cli": "^6.5.2",
    "sequelize-test-utils": "^0.3.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
